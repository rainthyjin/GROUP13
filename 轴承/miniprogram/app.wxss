/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  
} 

.textstyle{
  display: flex;
  margin-top: 50rpx;
  justify-content:center;
  font-size:45rpx;
  color:white;
}
.fillet{
  position:absolute;
  display:flex;
  flex-direction: column;
  left: 5%;
  width:90%;
  height: 100%;
  top: 150rpx;
  border-radius:40rpx;/*边框圆角*/
  box-shadow: 0px 6px 20px -1px #d8d8d86b;
  background-color:rgb(255, 255, 255);
}


button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}