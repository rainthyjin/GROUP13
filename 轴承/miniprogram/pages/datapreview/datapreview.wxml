<view class="content">
<image class='background' src="../../images/background2.png" mode="aspectFill"></image>
<text class='textstyle'>机组数据</text>
<view class='fillet'>

<van-cell-group border="{{ false }}">
<van-cell  title="选择当前设备"  value="{{value1}}"   custom-class="cells"   bind:click="showPopup" />
<van-cell title="诊断时间" value="{{time}}" />
</van-cell-group>

<van-grid column-num="4" custom-class="ebox">
 <van-grid-item use-slot custom-class="box"><view class="gkTitle">工况参数</view></van-grid-item>
  <van-grid-item use-slot custom-class="box"><view class="gkTitle">有效值</view></van-grid-item>
  <van-grid-item use-slot custom-class="box"><view class="gkTitle">最高值</view></van-grid-item>
  <van-grid-item use-slot custom-class="box"><view class="gkTitle">最低值</view></van-grid-item>

  <van-grid-item use-slot custom-class="box"><view class="gkTitle" >{{result[0].key}}</view></van-grid-item>
  <van-grid-item use-slot custom-class="box"><view class="gkTitle" style="color:#237ab7" data-i="i">{{result[0].arr[i]}}</view></van-grid-item>
  <van-grid-item use-slot custom-class="box"><view class="gkTitle" style="color:orange">{{result[0].max}}</view></van-grid-item>
  <van-grid-item use-slot custom-class="box"><view class="gkTitle" style="color:red">{{result[0].min}}</view></van-grid-item>

  <van-grid-item use-slot custom-class="box"><view class="gkTitle" >{{result[1].key}}</view></van-grid-item>
  <van-grid-item use-slot custom-class="box"><view class="gkTitle" style="color:#237ab7" data-i="i">{{result[1].arr[i]}}</view></van-grid-item>
  <van-grid-item use-slot custom-class="box"><view class="gkTitle" style="color:orange">{{result[1].max}}</view></van-grid-item>
  <van-grid-item use-slot custom-class="box"><view class="gkTitle" style="color:red">{{result[1].min}}</view></van-grid-item>

  <van-grid-item use-slot custom-class="box"><view class="gkTitle" >{{result[3].key}}</view></van-grid-item>
  <van-grid-item use-slot custom-class="box"><view class="gkTitle" style="color:#237ab7" data-i="i">{{result[3].max}}</view></van-grid-item>
  <van-grid-item use-slot custom-class="box"><view class="gkTitle" style="color:orange">{{result[3].max}}</view></van-grid-item>
  <van-grid-item use-slot custom-class="box"><view class="gkTitle" style="color:red">{{result[3].min}}</view></van-grid-item>

  <van-grid-item use-slot custom-class="box"><view class="gkTitle" >{{result[2].key}}</view></van-grid-item>
  <van-grid-item use-slot custom-class="box"><view class="gkTitle" style="color:#237ab7" data-i="i">{{result[2].arr[i]}}</view></van-grid-item>
  <van-grid-item use-slot custom-class="box"><view class="gkTitle" style="color:orange">{{result[2].max}}</view></van-grid-item>
  <van-grid-item use-slot custom-class="box"><view class="gkTitle" style="color:red">{{result[2].min}}</view></van-grid-item>

</van-grid>

<van-popup
  show="{{show}}"
  round
  position="bottom"
  overlay="{{ false }}"
  bind:close="onClose"
>

<block wx:if="{{show1}}">
<van-picker
  show-toolbar
  title="设备号"
  columns="{{ columns1 }}"
  bind:cancel="onCancel"
  bind:confirm="onConfirm1"
/>
</block>
</van-popup>

</view>
</view>