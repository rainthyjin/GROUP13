/* pages/mine/mine.wxss */
page {

  width: 100%;
  height:100%;
}

.background {
width: 100%;
height: 100%;
position:fixed; 
background-size:100% 100%;
z-index: -1;
}

.mp-info {
  position: absolute;
  top:85rpx;
  display:flex;
  flex-direction:column;
  text-align:center;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.icon {
  overflow: hidden;
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
}
.mp-name{
  display:flex;
  justify-content: center;
  margin-top: 16rpx;
  font-size: 35rpx;
  color: rgba(0, 0, 0, 0.847);
}
.group{
  display:flex;
  flex-direction: column;
  width: 100%;
  margin-top: 180rpx;
}
